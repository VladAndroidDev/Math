<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        
        <variable
            name="viewmodel"
            type="com.v.nevi.p.sv.android.math.screens.play.PlayViewModel" />

    </data>

    <com.v.nevi.p.sv.android.math.views.ResizableButton
        android:id="@+id/answer_options_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        android:gravity="center"
        android:onClick="@{(v)->viewmodel.onAnswerSelected(v)}"
        android:maxLines="1"
        android:background="@drawable/ripple_button"
        app:autoSizeMaxTextSize="28sp"
        app:autoSizeMinTextSize="11sp"
        app:autoSizeTextType="uniform"
        />

</layout>