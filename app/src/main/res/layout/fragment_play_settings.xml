<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.v.nevi.p.sv.android.math.screens.playsettings.PlaySettingsViewModel" />

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/text_mathematical_operations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="@string/mathematical_operations"
           />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkbox_addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addition"
            android:checked="@={viewmodel.playSettings.additionEnabled}"
            />

            <CheckBox
                android:id="@+id/checkbox_subtraction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtraction"
                android:checked="@={viewmodel.playSettings.subtractionEnabled}"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <CheckBox
            android:id="@+id/checkbox_multiplication"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/multiplication"
                android:checked="@={viewmodel.playSettings.multiplicationEnabled}"/>

            <CheckBox
            android:id="@+id/checkbox_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/division"
                android:checked="@={viewmodel.playSettings.divisionEnabled}"/>

        </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ranges"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/range_first"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:text="@{Integer.toString(viewmodel.playSettings.valueStartRange)}"
                android:onClick="@{()->viewmodel.onEnterFirstValueClick()}"/>

            <Button
                android:id="@+id/range_second"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="@{Integer.toString(viewmodel.playSettings.valueEndRange)}"
                android:onClick="@{()->viewmodel.onEnterSecondValueClick()}"/>


        </LinearLayout>
        <TextView
            android:id="@+id/text_game_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_duration"
            android:textSize="24sp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/game_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="not limited" />

        <com.google.android.material.slider.Slider
            android:id="@+id/game_duration_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:valueFrom="0"
            android:valueTo="10"
            android:stepSize="1"
            app:startValue="@{viewmodel.playSettings.gameDurationMin}"
            app:viewModel="@{viewmodel}"
            app:textViewLabel="@{gameDuration}"
            />

        <TextView
            android:id="@+id/text_number_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/number_of_tasks"
            android:textSize="24sp" />
        <TextView
            android:id="@+id/number_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="not limited" />

        <com.google.android.material.slider.Slider
            android:id="@+id/number_tasks_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="1"
            app:startValue="@{viewmodel.playSettings.numberTasks}"
            app:viewModel="@{viewmodel}"
            app:textViewLabel="@{numberTasks}"
            />

        <TextView
            android:id="@+id/text_number_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="@string/number_of_answers"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/number_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            tools:text="not limited" />

        <com.google.android.material.slider.Slider
            android:id="@+id/number_answers_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:valueFrom="0"
            android:valueTo="12"
            android:stepSize="2"
            app:startValue="@{viewmodel.playSettings.numberAnswers}"
            app:viewModel="@{viewmodel}"
            app:textViewLabel="@{numberAnswers}"
            />

        <Button
            android:id="@+id/start_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:layout_marginTop="16dp"
            android:onClick="@{()->viewmodel.onStartClick(startButton)}"/>
    </LinearLayout>
</layout>